{
  "name": "send_mail_api",
  "version": "1.0.0",
  "description": "API para implementação de envio de email usando clean arch, DDD and Test",
  "main": "index.js",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "scripts": {
    "test": "tsc && jest ./dist --verbose --forceExit",
    "prepare": "husky install",
    "test:cov": "tsc && jest ./dist --coverage",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VinTesta/send_mail_api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VinTesta/send_mail_api/issues"
  },
  "homepage": "https://github.com/VinTesta/send_mail_api#readme",
  "dependencies": {
    "@types/jest": "^29.0.3",
    "env-var": "^7.3.0",
    "jest": "^29.0.3",
    "nodemailer": "^6.7.8",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "husky": "^8.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": ["json", "html"]
  }
}
